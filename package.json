{
  "name": "skylark-reference-apps",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "license": "MIT",
  "scripts": {
    "lerna-run": "lerna run",
    "lerna-exec": "lerna exec",
    "deepclean": "lerna exec -- rm -rf node_modules && rm -rf node_modules",
    "lint": "lerna run --parallel lint",
    "lint:fix": "lerna run --parallel lint -- --fix",
    "test": "lerna run --parallel test",
    "test:ci": "lerna run --parallel test -- --ci --coverage",
    "tsc": "lerna run --parallel tsc",
    "prettier": "prettier . --write",
    "prettier:check": "prettier . --check",
    "prepare": "husky install",
    "storybook": "lerna run --stream storybook",
    "dev": "lerna run --parallel dev",
    "ingest": "lerna run --stream ingest",
    "vercel:link": "lerna run --parallel vercel:link",
    "vercel:env": "lerna run --parallel vercel:env"
  },
  "devDependencies": {
    "@lerna/exec": "4.0.0",
    "@lerna/run": "4.0.0",
    "@typescript-eslint/eslint-plugin": "6.21.0",
    "@typescript-eslint/parser": "6.21.0",
    "eslint": "8.57.1",
    "eslint-config-airbnb": "19.0.4",
    "eslint-config-airbnb-typescript": "16.2.0",
    "eslint-config-prettier": "9.1.0",
    "eslint-plugin-cypress": "3.5.0",
    "eslint-plugin-eslint-comments": "3.2.0",
    "eslint-plugin-import": "2.31.0",
    "eslint-plugin-jest": "27.9.0",
    "eslint-plugin-jsx-a11y": "6.10.0",
    "eslint-plugin-prettier": "5.2.1",
    "eslint-plugin-react": "7.37.1",
    "eslint-plugin-react-hooks": "4.6.2",
    "eslint-plugin-storybook": "0.9.0",
    "eslint-plugin-unused-imports": "4.1.4",
    "husky": "9.1.6",
    "prettier": "3.3.3",
    "prettier-plugin-tailwindcss": "0.6.8",
    "tailwindcss": "3.4.13",
    "typescript": "5.6.2"
  }
}
