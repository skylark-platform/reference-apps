{
  "name": "skylark-reference-apps",
  "version": "0.1.0",
  "private": true,
  "workspaces": [
    "packages/*",
    "apps/*"
  ],
  "license": "MIT",
  "scripts": {
    "lerna-run": "lerna run",
    "lerna-exec": "lerna exec",
    "deepclean": "lerna exec -- rm -rf node_modules && rm -rf node_modules",
    "lint": "lerna run --parallel lint",
    "lint:fix": "lerna run --parallel lint -- --fix",
    "test": "lerna run --parallel test",
    "test:ci": "lerna run --parallel test -- --ci --coverage",
    "tsc": "lerna run --parallel tsc",
    "prettier": "prettier . --write",
    "prettier:check": "prettier . --check",
    "prepare": "husky install",
    "storybook": "lerna run --stream storybook",
    "dev": "lerna run --parallel dev"
  },
  "devDependencies": {
    "@lerna/exec": "^4.0.0",
    "@lerna/run": "^4.0.0",
    "@types/tailwindcss": "^3.0.10",
    "@typescript-eslint/eslint-plugin": "^5.4.0",
    "@typescript-eslint/parser": "^5.4.0",
    "eslint": "8.3.0",
    "eslint-config-airbnb": "^19.0.1",
    "eslint-config-airbnb-typescript": "^16.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-cypress": "^2.12.1",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.25.3",
    "eslint-plugin-jest": "^25.3.0",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-prettier": "^4.0.0",
    "eslint-plugin-react": "^7.27.1",
    "eslint-plugin-react-hooks": "^4.3.0",
    "eslint-plugin-storybook": "^0.5.11",
    "eslint-plugin-unused-imports": "^2.0.0",
    "husky": ">=6",
    "prettier": "2.5.1",
    "prettier-plugin-tailwindcss": "0.1.1",
    "typescript": "4.6.4"
  }
}
